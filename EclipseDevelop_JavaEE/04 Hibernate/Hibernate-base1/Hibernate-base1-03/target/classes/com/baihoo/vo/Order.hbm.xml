<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 配置订单实体与订单表的对应关系 -->
	<class name="com.baihoo.vo.Order" table="orders">
		<!-- 配置唯一标识OID -->
		<id name="oid" column="oid">
			<generator class="native"/>
		</id>
		<!-- 普通属性 -->
		<property name="addr" column="addr" length="30"/>
		<!-- 配置所属客户对象 -->
		<!-- 谁是多的一方,标签的many在前方. -->
		<!-- 
			many-to-one
				name:属性是订单实体中的客户对象的名称 
				column:在创建表的时候,对应的外键名称
				class:一的一方的类的全路径
		-->
		<many-to-one  name="customer" column="cno" class="com.baihoo.vo.Customer" />
	</class>
</hibernate-mapping>
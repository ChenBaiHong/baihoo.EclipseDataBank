<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 带有切点的切面==============================================start -->
	<!-- 定义目标对象 -->
	<bean id="personDao" class="com.baihoo.spring4.demo4.dao.PersonDao"></bean>
	<!-- 定义增强通知 -->
	<bean id="myAroundAdvice" class="com.baihoo.spring4.demo4.aop.advice.MyAroundAdvice"></bean>
	<!-- 定义切点切面 -->
	<bean id="myPointcutAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<!-- 定义表达式,规定哪些方法执行拦截 -->
		<!-- . 任意字符  ，* 任意个 -->
		<!-- <property name="pattern" value=".*"/> -->
		<!-- 精确至包目录下的某个类，需要对“ . ”反斜杠转义，否则就会按正则匹配 -->
		<!-- <property name="pattern" value="com\.baihoo\.spring4\.demo4\.dao.PersonDao\.add.*"/> -->
		<!-- <property name="pattern" value=".*add.*"></property> -->
		<property name="patterns" value=".*add.*,.*find.*"></property>
		<!-- 应用增强 -->
		<property name="advice" ref="myAroundAdvice"/>
	</bean>
	
	<!-- spring配置生成动态代理（由spring支持） -->
	<bean id="personDaoProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<!-- 设置目标对象 -->
		<property name="target" ref="personDao"></property>
		<!-- 设置拦截‘增强通知’名称，这里需要使用value设置值，而非ref。interceptorNames属于多个值数组 -->
		<property name="interceptorNames" value="myPointcutAdvisor"/>
		<!-- 定义目标对象没有接口类，使用CGLib生成代理 -->
		<property name="optimize" value="true"></property>
	</bean>
	<!-- 带有切点的切面===============================================end -->

</beans>
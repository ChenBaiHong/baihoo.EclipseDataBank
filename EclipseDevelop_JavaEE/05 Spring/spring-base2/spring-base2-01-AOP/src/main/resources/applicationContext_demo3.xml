<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 不带有切点的切面==============================================start -->
	<!-- 定义目标对象 -->
	<bean id="customerDao" class="com.baihoo.spring4.demo3.dao.impl.CustomerDaoImpl"></bean>
	<!-- 定义增强通知 -->
	<bean id="myBeforeAdvice" class="com.baihoo.spring4.demo3.aop.advice.MyBeforeAdvice"></bean>
	<!-- spring配置生成动态代理（由spring支持） -->
	<bean id="customerDaoProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<!-- 设置目标对象 -->
		<property name="target" ref="customerDao"></property>
		<!-- 设置目标对象的实现接口，value中的值写接口的全路径 -->
		<property name="proxyInterfaces" value="com.baihoo.spring4.demo3.dao.CustomerDao"/>
		<!-- 设置拦截‘增强通知’名称，这里需要使用value设置值，而非ref。interceptorNames属于多个值数组 -->
		<property name="interceptorNames" value="myBeforeAdvice"/>
		<!-- 强制使用CGLib生成代理 -->
		<!-- <property name="optimize" value="true"></property> -->
	</bean>
	<!-- 不带有切点的切面===============================================end -->

</beans>
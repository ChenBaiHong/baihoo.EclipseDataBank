<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<!-- 	
Struts2.5版本struts.xm和web.xml配置更改
对于Struts2.5以上的版本就可以用url+!+方法访问Action某个方法
 -->
<struts>
	<!-- 
	http://localhost:8080/struts2-base-01/$%7BpageContext.request.ContextPath%7D/hello
	 -->
	<package name="default" namespace="/" extends="struts-default">
		<!-- 全局允許的方法匹配規則 -->
		<global-allowed-methods>regex:.*</global-allowed-methods>  
		<action name="hello" class="com.baihoo.struts2.HelloAction"
			method="say">
			<result name="good">/hello.jsp</result>
		</action>
	</package>
	<!--
	 http://localhost:8080/struts2-base-01/baihoo/$%7BpageContext.request.ContextPath%7D/hello
	  -->
	<package name="baihoo" namespace="/baihoo" extends="struts-default">
		<!-- 全局允許的方法匹配規則 -->
		<global-allowed-methods>regex:.*</global-allowed-methods>  
		<action name="hello" class="com.baihoo.struts2.HelloAction"
			method="say">
			<result name="good">/hello.jsp</result>
		</action>
	</package>
</struts>

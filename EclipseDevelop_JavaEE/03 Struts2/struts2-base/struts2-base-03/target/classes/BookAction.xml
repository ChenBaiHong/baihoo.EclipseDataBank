<!-- 	
Struts2.5版本struts.xm和web.xml配置更改
对于Struts2.5以上的版本就可以用url+!+方法访问Action某个方法
 -->
<struts>
	<package name="book" namespace="/" extends="struts-default">
		<!-- 全局允許的方法匹配規則 -->
		<global-allowed-methods>regex:.*</global-allowed-methods>  
		
		<action name="book_*" class="com.baihoo.struts2.BookAction" method="{1}"></action>
